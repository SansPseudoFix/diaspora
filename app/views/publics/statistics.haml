= render template: "layouts/with_header"

- content_for :container_content do
  
  .row-fluid
    %h1
      = t('_statistics')  
    
    - @data.each do |key, value|
      .span-3
        %h3
        - if key == "services"
          - key.each do |k, v|
              - "${t('statistics.is_connected_with")} #{k}"
            .data
              - v ? t('statistics.connected') : t('statistics.not_connected')
        - else
            = t("statistics.#{key}")
          .data
            = value
